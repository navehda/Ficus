                <div class="container">
                    <div class="row">
                        <!-- Checkout Form -->
                        <div class="col-xl-8">
                            <h3>Checkout Details</h3>
                            <form method="POST" action="/checkout/complete">
                                <div class="form-group">
                                    <label for="name">Full Name</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="form-group">
                                    <label for="address">Shipping Address</label>
                                    <input type="text" class="form-control" name="address" required>
                                </div>
                                <div class="form-group">
                                    <label for="paymentMethod">Payment Method</label>
                                    <select class="form-control" name="paymentMethod" required>
                                        <option value="credit">Credit Card</option>
                                        <option value="paypal">PayPal</option>
                                    </select>
                                </div>
                                <button type="submit" class="button button-large">Complete Purchase</button>
                            </form>
                        </div>
                        
                        <!-- Order Summary -->
                        <div class="col-xl-4">
                            <h3>Order Summary</h3>
                            <table class="table cart">
                                <thead>
                                    <tr>
                                        <th class="cart-product-name">Product</th>
                                        <th class="cart-product-price">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let item of cart) { %>
                                        <tr class="cart-item">
                                            <td class="cart-product-name">
                                                <strong><%= item.name %></strong> <span class="product-quantity">x <%= item.quantity %></span>
                                            </td>
                                            <td class="cart-product-price">
                                                <span class="amount">$<%= item.product.price.toFixed(2) * item.quantity %></span>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                                <tfoot>
                                    <tr class="cart-subtotal" >
                                        <td><strong>Subtotal</strong></td>
                                        <td><span class="amount">$<%= cart.reduce((acc, item) => acc + item.product.price.toFixed(2) * item.quantity, 0) %></span></td>
                                    </tr>
                                    <tr class="cart-total">
                                        <td><strong>Total</strong></td>
                                        <td><span class="amount">$<%= cart.reduce((acc, item) => acc + item.product.price.toFixed(2) * item.quantity, 0) %></span></td>
                                    </tr>
                                </tfoot>
                            </table>
                    </div>
                </div>
            </div>
